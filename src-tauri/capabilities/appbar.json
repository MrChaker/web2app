{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "appbar",
  "description": "Capability for the appbar window",
  "windows": ["app", "app_bar"],
  "remote": {
    "urls": ["https://*.*", "http://*.*"]
  },
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:event:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "shell:allow-open",
    "shell:default",
    "core:window:allow-set-size",
    "core:window:allow-set-position"
  ]
}
