{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "web-to-app",
  "version": "0.1.0",
  "identifier": "com.web-to-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://example.com;",
      "capabilities": ["appbar", "default"]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["libcrypto-3-x64.dll"]
  },
  "plugins": {
    "updater": {
      "createUpdaterArtifacts": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQyNTU1Nzk2RjBEMTg0REUKUldUZWhOSHdsbGRWMHJUeU9hWjhWNXg4QXQ0YUhpOCs3QTNsVjk3Z0hEczVvTDhZR0grMnNzVGMK",
      "endpoints": [
        "https://gist.githubusercontent.com/MrChaker/fe2c7c794662f37c6a006126768b27aa/raw/updater.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
